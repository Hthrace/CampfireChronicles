<% layout('layouts/boilerplate') -%>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="/imgs/registerImg.jpg" alt="" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title text-center">Login</h5>
          <form action="/register" method="POST" novalidate class="validForm">
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Username</span>
              <input
                type="text"
                name="register[username]"
                id="username"
                class="form-control"
                required
              />
              <div class="valid-feedback">Cool name!</div>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Email</span>
              <input
                type="email"
                name="register[email]"
                id="email"
                class="form-control"
                required
              />
              <div class="valid-feedback">How did you get that email?!</div>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Password</span>
              <input
                type="password"
                name="register[password]"
                id="password"
                class="form-control"
                required
              />
              <div class="valid-feedback">I'll keep this a secret!</div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success btn-block">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
