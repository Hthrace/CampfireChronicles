  <body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-start mb-0">Campfire Chronicles</h3>
          <nav class="nav nav-masthead justify-content-center float-end">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
            <a class="nav-link" href="/campgrounds">Campgrounds</a>
            <% if(!currentUser) { %>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/register">Register</a>
            <% } else { %>
            <a class="nav-link" href="/logout">Logout</a>
            <% } %>
          </nav>
        </div>
      </header>
      <main class="px-3">
        <h1> Welcome to Campfire Chronicles! </h1>
        <p class="lead">
          Explore our many campgrounds. <br />
          Share some of your own & comment on others!
        </p>
        <a
          href="/campgrounds"
          class="btn btn-lg btn-secondary font-weight-bold border-white bg-white"
          >View Campgrounds</a
        >
      </main>

